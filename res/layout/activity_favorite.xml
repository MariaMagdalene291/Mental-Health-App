<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp" >

    <!-- Title -->

    <TextView
        android:id="@+id/breatheTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Breathe &amp; Relax"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Breathing Animation (Placeholder for Lottie or GIF) -->

    <ImageView
        android:id="@+id/breatheAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/breathe"
        tools:ignore="ContentDescription" />

    <!-- Start Breathing Exercise -->

    <Button
        android:id="@+id/startBreatheButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Start Breathing Exercise"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

</LinearLayout>