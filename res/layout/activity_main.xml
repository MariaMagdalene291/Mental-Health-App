<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Serenity"
        android:textColor="@color/purple"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText" />

    <!-- Description about Mental Health -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your safe space for mental wellness, calmness, and healing. Explore mindful tools and supportive resources to help you feel better every day."
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        tools:ignore="HardcodedText" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        tools:ignore="HardcodedText" />

</LinearLayout>
