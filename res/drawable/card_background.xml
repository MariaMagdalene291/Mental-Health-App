<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (simulated with a slightly darker background and offset) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Soft black shadow -->
            <corners android:radius="18dp"/>
        </shape>
    </item>

    <!-- Foreground Card Layer -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Card background -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Light border -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>

</layer-list>
